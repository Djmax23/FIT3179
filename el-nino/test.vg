{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "COVID-19 Active Cases (10 Oct 2020)",
    "width": 800,
    "height": 400,
    "data": {
        "url": "../TopoJSON Files/ne_1.json",
        "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
        }
    },
    "projection": {
        "type": "equirectangular",
        "rotate": [
            130,
            0,
            0
        ]
    },
    "layer": [
        {
            "transform": [
                {
                    "lookup": "properties.name",
                    "from": {
                        "data": {
                            "url": "../Data Files/cleaned_weather_data_with_states.csv"
                        },
                        "key": "State",
                        "fields": [
                            "Rainfall"
                        ]
                    }
                },
                {
                    "calculate": "toDate(datum.Date, '%d/%m/%Y')",
                    "as": "ParsedDate"
                },
                {
                    "calculate": "year(datum.ParsedDate)",
                    "as": "Year"
                },
                {
                    "filter": "datum.Year = 2010"
                },
                {
                    "aggregate": [
                        {
                            "op": "average",
                            "field": "Rainfall",
                            "as": "AverageRainfall"
                        }
                    ],
                    "groupby": [
                        "State"
                    ]
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "white"
            },
            "encoding": {
                "color": {
                    "field": "AverageRainfall",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            1,
                            10,
                            100
                        ],
                        "range": [
                            "#fdbe85",
                            "#fd8d3c",
                            "#e6550d",
                            "#a63603"
                        ]
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.NAME",
                        "type": "nominal",
                        "title": "State"
                    },
                    {
                        "field": "AverageRainfall",
                        "type": "quantitative"
                    }
                ]
            }
        }
    ],
    "config": {}
}